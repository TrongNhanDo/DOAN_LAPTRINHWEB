                <th style="border:1px solid black; padding:16px;  width: 400px;">@Html.DisplayFor(m => m.Id)</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th style="border:1px solid black; padding:16px;">@Html.DisplayNameFor(m => m.Name)</th>
